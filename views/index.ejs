<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Words.</title>
    <link rel="stylesheet" href="styles/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Nanum+Pen+Script&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="heading"><h1>Words</h1></div>
      <div class="instruction"><h1>Enter Word Below</h1></div>
      <div class="input">
        <form action="/submit" method="POST">
          <input type="text" id="input" name="input" value="<%=input%>" />
          <div class="options">
            <input type="hidden" name="choice" id="choice" />
            <button type="submit">Definition</button>
            <button type="submit">Synonym</button>
            <button type="submit">Antonym</button>
          </div>
        </form>
      </div>
      <div class="output">
        <ul>
          <li><%= output %></li>
        </ul>
      </div>
    </div>
    <script>
      document.querySelectorAll("button").forEach((button) => {
        button.addEventListener("click", function (event) {
          event.preventDefault();
          document.getElementById("choice").value = this.innerHTML;
          this.closest("form").submit();
        });
      });
    </script>
  </body>
</html>
